@page
@model Electronics_Items_Management.Pages.Product_Details.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<!--code to set the location of headings-->
<style>
    h1 {
        text-align: center
    }
</style>
<!--code to display the product detail table data to show the details-->
<h1>Product Detail</h1>

<h4>Details Page</h4>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Product Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product_Detail.Product_Name)
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product_Detail.Price)
        </dd>
        <dt class="col-sm-2">
            Brand Detail
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product_Detail.Brand_Detail.Brand_Name)
        </dd>
        <dt class="col-sm-2">
            Category Detail
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product_Detail.Category_Detail.Product)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Product_Detail.Id">Edit</a> |
    <a asp-page="./Index">GO TO HOME PAGE</a>
</div>
