@page
@model Electronics_Items_Management.Pages.Product_Details.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<!--code to set the location of headings-->
<style>
    h1 {
        text-align: center
    }
</style>
<!--code to delete the product table details-->
<h1>Product Detail</h1>

<h3>Delete Page</h3>

<h4>Are you sure you want to delete this?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Product Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product_Detail.Product_Name)
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product_Detail.Price)
        </dd>
        <dt class="col-sm-2">
            Brand Detail
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product_Detail.Brand_Detail.Brand_Name)
        </dd>
        <dt class="col-sm-2">
            Category Detail
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product_Detail.Category_Detail.Product)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Product_Detail.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">GO TO HOME PAGE</a>
    </form>
</div>
