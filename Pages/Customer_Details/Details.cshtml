@page
@model Electronics_Items_Management.Pages.Customer_Details.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<!--code to set the location of headings-->
<style>
    h1 {
        text-align: center
    }
</style>
<!--code to display the customer detail table data to show the details-->
<h4>Customer Detail</h4>

<h4>Details Page</h4>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Customer Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer_Detail.Customer_Name)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer_Detail.Email)
        </dd>
        <dt class="col-sm-2">
            Phone
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer_Detail.Phone)
        </dd>
        <dt class="col-sm-2">
            Delivery Address
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer_Detail.Delivery_Address)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Customer_Detail.Id">Edit</a> |
    <a asp-page="./Index">GO TO HOME PAGE</a>
</div>
