@page
@model Electronics_Items_Management.Pages.Category_Details.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<!--code to set the location of headings-->

<style>
    h1 {
        text-align: center
    }
</style>
<!--code to delete the category table details-->
<h1>Category Detail</h1>
<h3>Delete Page</h3>

<h4>Are you sure you want to delete this?</h4>
<div>
    <h4>Category Detail</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Product
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category_Detail.Product)
        </dd>
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category_Detail.Category_Type)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Category_Detail.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">GO TO HOME PAGE</a>
    </form>
</div>
