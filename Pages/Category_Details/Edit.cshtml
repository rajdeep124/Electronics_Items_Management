@page
@model Electronics_Items_Management.Pages.Category_Details.EditModel

@{
    ViewData["Title"] = "Edit";
}

<style>
    h1 {
        text-align: center
    }
</style>
<h1>Category Detail</h1>

<h4>Edit Page</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Category_Detail.Id" />
            <div class="form-group">
                <label asp-for="Category_Detail.Product" class="control-label">Product</label>
                <input asp-for="Category_Detail.Product" class="form-control" />
                <span asp-validation-for="Category_Detail.Product" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category_Detail.Category_Type" class="control-label">Category</label>
                <input asp-for="Category_Detail.Category_Type" class="form-control" />
                <span asp-validation-for="Category_Detail.Category_Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">GO TO HOME PAGE</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
