@page
@model Electronics_Items_Management.Pages.Category_Details.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<!--code to set the location of headings-->
<style>
    h1 {
        text-align: center
    }
</style>
<!--code to display the category detail table data to show the details-->
<h1>Category Detail</h1>
<h4>Details Page</h4>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Product
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category_Detail.Product)
        </dd>
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category_Detail.Category_Type)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Category_Detail.Id">Edit</a> |
    <a asp-page="./Index">GO TO HOME PAGE</a>
</div>
