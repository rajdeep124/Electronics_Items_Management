@page
@model Electronics_Items_Management.Pages.Brand_Details.CreateModel

@{
    ViewData["Title"] = "Create";
}
<!--code to set the location of headings-->
<style>
    h1 {
        text-align: center
    }
</style>
<h1>Brand Detail</h1>
<h4>Create</h4>
<!--code to display the brand detail table after adding new details-->
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Brand_Detail.Brand_Name" class="control-label">Brand Name</label>
                <input asp-for="Brand_Detail.Brand_Name" class="form-control" />
                <span asp-validation-for="Brand_Detail.Brand_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand_Detail.Brand_Branch_Location" class="control-label">Brand Location</label>
                <input asp-for="Brand_Detail.Brand_Branch_Location" class="form-control" />
                <span asp-validation-for="Brand_Detail.Brand_Branch_Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand_Detail.Brand_Email" class="control-label">Email</label>
                <input asp-for="Brand_Detail.Brand_Email" class="form-control" />
                <span asp-validation-for="Brand_Detail.Brand_Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<!--code to jump back the home page-->
<div>
    <a asp-page="Index">GO TO HOME PAGE</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
