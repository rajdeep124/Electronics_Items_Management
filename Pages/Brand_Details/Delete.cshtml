@page
@model Electronics_Items_Management.Pages.Brand_Details.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<!--code to set the location of headings-->
<style>
    h1 {
        text-align: center
    }
</style>

<!--code to delete the brand table details-->
<h1>Brand Detail</h1>
<h3>Delete Page</h3>

<h4>Are you sure you want to delete this?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Brand Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand_Detail.Brand_Name)
        </dd>
        <dt class="col-sm-2">
            Brand Location
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand_Detail.Brand_Branch_Location)
        </dd>
        <dt class="col-sm-2">
            Brand Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand_Detail.Brand_Email)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Brand_Detail.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">GO TO HOME PAGE</a>
    </form>
</div>
