@page
@model Electronics_Items_Management.Pages.Order_Details.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Page</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Order Detail</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Quantity
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order_Detail.Quantity)
        </dd>
        <dt class="col-sm-2">
           Discount
        </dt>
        <dd class="col-sm-10">
           Discount
        </dd>
        <dt class="col-sm-2">
           Customer Detail
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order_Detail.Customer_Detail.Customer_Name)
        </dd>
        <dt class="col-sm-2">
           Product Detail
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order_Detail.Product_Detail.Product_Name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Order_Detail.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">GO TO HOME PAGE</a>
    </form>
</div>
